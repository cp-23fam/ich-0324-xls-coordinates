{
  "name": "PowerShell",
  "image": "mcr.microsoft.com/powershell:7.5-debian-12",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "username": "vscode",
      "upgradePackages": "false",
      "nonFreePackages": "true"
    },
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "8.0"
    }
  },
  "postCreateCommand": "sudo chsh vscode -s \"$(which pwsh)\"",
  "postStartCommand": "pwsh -c 'Install-Module -Name PSScriptAnalyzer -Repository PSGallery -Force; Install-Module -Name Pester -Force; Install-Module -Name InvokeBuild -Repository PSGallery -Scope CurrentUser -Force'",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "pwsh"
      },
      "extensions": [
        "ms-vscode.powershell",
        "pspester.pester-test",
        "esbenp.prettier-vscode"
      ]
    }
  }
}